{% extends "config.twig" %}

{% block content %}
    <div class="row">
        <h3>{% trans %}service.frontend_module.xhtml_title{% endtrans %}</h3>
        <p>{% trans %}service.frontend_module.xhtml_explain{% endtrans %}</p>
        <p class="explain">{% trans %}service.frontend_module.xhtml_description{% endtrans %}</p>
    </div>

    <div class="row">
        <h3>{% trans %}confirm.title{% endtrans %}</h3>
        <p>{% trans %}service.frontend_module.confirmation{% endtrans %}</p>
        <input type="hidden" name="confirm" value="">
        <input type="checkbox" id="ctrl_confirm" name="confirm" value="1"{% if confirmed %} checked{% endif %}>
        <label for="ctrl_confirm">{% trans %}confirm.checkbox{% endtrans %}</label>
    </div>
{% endblock %}
