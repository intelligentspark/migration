{% extends "base.twig" %}

{% block main %}
<div class="row headline">
    <h2>{% trans %}execute.headline{% endtrans %}</h2>
    <p>{% trans %}execute.intro{% endtrans %}</p>
</div>

{% if error %}
    <div class="row error">
        <h3>{% trans %}execute.error_headline{% endtrans %}</h3>
        <p>{% trans %}execute.error_description{% endtrans %}</p>
        <p class="mt">
            <a href="{{ base_url }}/" class="button main">{% trans %}execute.error_button{% endtrans %}</a>
        </p>
    </div>
{% else %}
    <form action="{{ base_url }}/execute" method="post">
        <div class="row">
            <h3>{% trans %}execute.success_headline{% endtrans %}</h3>
            <p>{% trans %}execute.success_description{% endtrans %}</p>
        </div>
        <div class="row">
            <h3>{% trans %}execute.backup_headline{% endtrans %}</h3>
            <p>{% trans %}execute.backup_description{% endtrans %}</p>
            <p class="explain">{% trans %}execute.lgpl{% endtrans %}</p>
        </div>
        <div class="row">
            <p class="mt">
                <a href="{{ base_url }}/config" class="button">{% trans %}execute.back{% endtrans %}</a>
                <button type="submit" class="button float_right main" name="continue" value="1">{% trans %}execute.continue{% endtrans %}</button>
                <button type="submit" class="button float_right" name="cancel" value="1" onclick="return confirm('{% trans %}execute.cancel_confirm{% endtrans %}')">{% trans %}execute.cancel{% endtrans %}</button>
            </p>
        </div>
    </form>
{% endif %}

{% endblock %}